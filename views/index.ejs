<!DOCTYPE html>
<html lang="pt-BR" ng-app="Hdb">
<%include header%>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <nav class="navbar navbar-default">
        <div class="navbar-header">
          <a class="navbar-brand brand">HistoryDB</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
              aria-haspopup="true" aria-expanded="false">Menu <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-3 form_alteracao">
        <button type="button" class="btn btn-sm btn-default active" ng-click="btncadastro()">
          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Novo registro
        </button>
        <button type="button" class="btn btn-sm btn-default active" ng-click="set()">
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
        </button>
        <button type="button" class="btn btn-sm btn-danger active" ng-click="RemoveRegistro(valores)">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remover
        </button>
      </div>
      <div class="col-lg-7" ng-show="true">
        <form class="form-inline form_inputs" name="FormCadastro">
          <div class="form-group">
            <input type="text" class="form-control" name="sistema" ng-model="cadastro.sistema" placeholder="Sistema" ng-required="true">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="funcao" ng-model="cadastro.funcao" placeholder="Função" ng-required="true">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="comando" ng-model="cadastro.comando" placeholder="Comando" ng-required="true">
          </div>
          <button class="btn btn-default btn-sm btn-default active" ng-click="AdicionaRegistro(cadastro)" ng-disabled="FormCadastro.$invalid">
            <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> Cadastrar
          </button>
        </form>
      </div>
      <!---------- >
      <!----------->
      <div class="col-lg-2 input_search">
        <input type="text" class="form-control" ng-model="widget.casa" placeholder="Pesquisa">
      </div>
    </div>
  </div>
  <div class="col-log-12 tabelamargem">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th><a href ng-click="ordenar('nome')">Autor</th>
          <th><a href ng-click="ordenar('sistema')">Sistema</th>
          <th><a href ng-click="ordenar('funcao')">Função</th>
          <th><a href ng-click="ordenar('comando')">Comando</th>
          <th><a href ng-click="ordenar('data')">Data</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr ng-class="{marcador: valor.selecionado}" ng-dblclick="EditaRegistro(valor)" ng-click="TrMarcado(valores, valor)" ng-repeat="valor in valores |orderBy: ordernacao: reordenacao">
          <td ng-bind="valor.autor"></td>
          <td ng-bind="valor.sistema"></td>
          <td ng-bind="valor.funcao"></td>
          <td ng-bind="valor.comando"></td>
          <td ng-bind="valor.data | date: 'dd/MM/yyyy HH:MM'"></td>
          <td><input type="checkbox" ng-disabled="true" ng-model="valor.selecionado" ng-checked="valor.selecionado" ng-click="checkselecionado($event, valores)"/></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

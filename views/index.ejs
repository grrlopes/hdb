<!DOCTYPE html>
<html lang="pt-BR" ng-app="Hdb">
<%include header%>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">HDB</a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                aria-haspopup="true" aria-expanded="false">Menu <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">1</a></li>
                  <li><a href="#">2</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-1 form_alteracao">
      <button type="button" class="btn btn-default" ng-click="btncadastro()">Novo cadastro</button>
    </div>
    <div class="col-lg-10 col-lg-offset-2" ng-show="aparececad" ng-class="{form_alteracao: aparececad}">
      <form>
        <div class="col-lg-2">
          <input class="form-control" type="text" name="sistema" value="" placeholder="Sistema">
        </div>
        <div class="col-lg-3">
          <input class="form-control" type="text" name="funcao" value="" placeholder="Funcao">
        </div>
        <div class="col-lg-3">
          <input class="form-control" type="text" name="comando" value="" placeholder="Comando">
        </div>
      </form>
      <div class="col-lg-2">
        <button class="btn btn-primary btn-block form-control" type="button" name="button">Novo registro</button>
      </div>
    </div>
  </div>
  <div class="col-log-12 tabelamargem">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><a href ng-click="ordenar('nome')">Autor</th>
          <th><a href ng-click="ordenar('sistema')">Sistema</th>
          <th><a href ng-click="ordenar('funcao')">Função</th>
          <th><a href ng-click="ordenar('comando')">Comando</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="valor in valores |orderBy: ordernacao: reordenacao">
          <td ng-bind="valor.autor"></td>
          <td ng-bind="valor.sistema"></td>
          <td ng-bind="valor.funcao"></td>
          <td ng-bind="valor.comando"></td>
          <td><input type="checkbox" ng-model="valor.selecionado" ng-click="checkselecionado(valores)"/></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

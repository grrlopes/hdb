<!DOCTYPE html>
<html lang="pt-BR" ng-app="Hdb">
<%include header%>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <nav class="navbar navbar-default">
        <div class="navbar-header">
          <a class="navbar-brand">HDB</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
              aria-haspopup="true" aria-expanded="false">Menu <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-1 form_alteracao">
        <button type="button" class="btn btn-xs btn-default active" ng-click="btncadastro()">
          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Novo registro
        </button>
      </div>
      <div class="col-lg-1 col-lg-offset-1 form_alteracao">
        <button type="button" class="btn btn-xs btn-default active" ng-dblclick="EditaRegistro()">
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
        </button>
      </div>
      <div class="col-lg-1 col-lg-offset-1 form_alteracao" ng-if="selecionado">
        <button type="button" class="btn btn-xs btn-danger active" ng-click="RemoveRegistro(valores)">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remover
        </button>
      </div>
      <form class="form-inline">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Sistema">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Função">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Comando">
        </div>
        <button class="btn btn-default">Cadastrar</button>
      </form>
    </div>
  </div>
  <div class="col-log-12 tabelamargem">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th><a href ng-click="ordenar('nome')">Autor</th>
          <th><a href ng-click="ordenar('sistema')">Sistema</th>
          <th><a href ng-click="ordenar('funcao')">Função</th>
          <th><a href ng-click="ordenar('comando')">Comando</th>
          <th><a href ng-click="ordenar('data')">Data</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr ng-class="{marcador: valor.selecionado}" ng-dblclick="EditaRegistro(valor)" ng-click="TrMarcado($event, valor)" ng-repeat="valor in valores |orderBy: ordernacao: reordenacao">
          <td ng-bind="valor.autor"></td>
          <td ng-bind="valor.sistema"></td>
          <td ng-bind="valor.funcao"></td>
          <td ng-bind="valor.comando"></td>
          <td ng-bind="valor.data | date: 'dd/MM/yyyy HH:MM'"></td>
          <td><input type="checkbox" ng-model="valor.selecionado" ng-checked="valor.selecionado" ng-click="checkselecionado($event, valores)"/></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
